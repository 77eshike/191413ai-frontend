{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    ".next/types/**/*.ts",
    ".storybook",
    "vitest.config.ts",
    "vitest.setup.ts",
    "commitlint.config.cjs",
    "next-env.d.ts",
    "eslint.config.js",
    "tailwind.config.js",
    "postcss.config.mjs",
    "prettier.config.js"
  ],
  "exclude": ["node_modules"]
}
